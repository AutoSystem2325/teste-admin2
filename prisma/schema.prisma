generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Mae {
  id        String   @id @default(cuid())
  nome      String
  email     String   @unique
  senha     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relacionamento com filhos
  filhos Filho[]

  @@map("maes")
}

model Filho {
  id        String   @id @default(cuid())
  nome      String
  email     String   @unique
  senha     String
  validade  DateTime
  maeId     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relacionamento com m√£e
  mae Mae @relation(fields: [maeId], references: [id], onDelete: Cascade)

  @@map("filhos")
}



